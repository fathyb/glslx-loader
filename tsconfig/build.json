{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "lib": [
            "es2015", "dom"
        ],
        "types": [
            "commander"
        ],
        "moduleResolution": "node",
        "rootDir": "../src",
        "outDir": "../build"
    },
    "include": [
        "../src/**/*.ts"
    ]
}